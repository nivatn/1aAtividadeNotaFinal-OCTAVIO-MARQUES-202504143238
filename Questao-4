<body>

    <div class="container">
        <h2>Calculadora de IMC</h2>

        <input type="number" id="peso" placeholder="Seu peso (em kg)">

        <input type="number" id="altura" placeholder="Sua altura (em metros, ex: 1.75)">

        <button onclick="calcularIMC()">Calcular</button>

        <p id="resultado"></p>
    </div>

   <script>
        function calcularIMC() {
            const peso = parseFloat(document.getElementById('peso').value);
            const altura = parseFloat(document.getElementById('altura').value);
            const pResultado = document.getElementById('resultado');

            if (!peso || !altura || peso <= 0 || altura <= 0) {
                pResultado.textContent = 'Por favor, insira valores válidos.';
                return;
            }

            const imc = peso / (altura * altura);
            
            pResultado.textContent = 'Seu IMC é: ' + imc.toFixed(2);
        }
    </script>

